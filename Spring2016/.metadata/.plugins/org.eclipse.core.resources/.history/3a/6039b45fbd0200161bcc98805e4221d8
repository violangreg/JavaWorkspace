import java.awt.Point;
import java.io.File;
import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Random;
import java.util.Scanner;

public class QuarryGenerator {
	ArrayList<Quarry> quarry;
	public QuarryGenerator(){
		quarry = new ArrayList<Quarry>(); // TODO not finished
	}
	public Quarry generateQuarry(){
		Random rand = new Random();
		int x = rand.nextInt(100) + 1;
		int y = rand.nextInt(100) + 1;
		int w, h;
		w = h = 0;
		
		Point p = new Point(x,y);
		
		File f = new File("QuarryList.txt");
		try{
			Scanner scnr = new Scanner(f);
			do{
				String read = scnr.nextLine();
				String[] tokens = read.split(",");
				
				int weight = Integer.parseInt(tokens[1]);
				if(weight < 300){
					w = 100;
					h = 100;
				}
				else if(weight < 150){
					w = 50;
					h = 50;
				}
				else if(weight < 50){
					w = 25;
					h = 25;
				}
				else if(weight < 25){
					w = 12;
					h = 12;
				}
				
				Quarry q = new Quarry(p, w, h, Integer.parseInt(tokens[2]), Integer.parseInt(tokens[3]), tokens[0], Integer.parseInt(tokens[1]));
				
				quarr
				
				
			}while(scnr.hasNextLine());
		}catch(FileNotFoundException e){
			System.out.println("FNFE");
		}
		
		
		return null; // TODO
	}
}
